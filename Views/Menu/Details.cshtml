@model Menu.Models.Dish
@{
    ViewData["Title"] = " Details";
}

<div class="container">
    <div class="d-flex justfiy-content-center">
        <h2>Model.Name</h2>
    </div>
        <div class="d-flex justify-content-center">

            <img src="@Model.ImageUrl" width="50%" />

        </div>
            
        <div class="d-flex justify-content-center">

             @Model.Price.ToString("N2") Dollars

         </div>
         <div class="d-flex justify-content-center">
            Ingredinets:
            <ui>
                @foreach (var item in Model.DishIngredients)
                {
                    <li>
                    
                    @item.Ingredient.Name

                    </li>
                }
            </ul>
         </div>
         <a class="btn btn-primary" asp-action="Index">Back to The Menu</a>
</div>